{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "context": true,
        "beforeEach": true,
        "cy": true,
        "it": true,
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "semi": "error",
        "quotes": ["error", "single"],
        "eol-last": ["error", "always"]
    }
}